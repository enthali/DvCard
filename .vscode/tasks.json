{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Android: Start Android Studio",
            "type": "shell",
            "command": "studio",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "AndroidSim: Start Android Emulator",
            "type": "shell",
            "command": "./.vscode/start_emulator.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "AndroidSim: Save Emulator Snapshot",
            "type": "shell",
            "command": "./.vscode/save_snapshot.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "AndroidSim: Quick Start Emulator (Background)",
            "type": "shell",
            "command": "$ANDROID_HOME/emulator/emulator",
            "args": [
                "-avd",
                "Medium_Phone_API_36.1",
                "-gpu",
                "swiftshader_indirect",
                "-no-snapshot-save"
            ],
            "group": "test",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Chromium Browser",
            "type": "shell",
            "command": "chromium-browser",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}